<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Fragments.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:layout_marginTop="35dp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:id="@+id/user_item_username"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"></TextView>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/profile_image_my_profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:layout_below="@+id/user_item_username"
            android:background="@mipmap/ic_launcher_round">
        </de.hdodenhof.circleimageview.CircleImageView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/change_profile_image"
            android:text="Change Image profile"
            android:layout_below="@id/profile_image_my_profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:background="@drawable/mybutton"

            android:clickable="true">
        </Button>



    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logout"
        android:text="Logout"
        android:background="@drawable/mybutton"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true">
    </Button>
</RelativeLayout>